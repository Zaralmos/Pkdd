                            <stop offset="0%" stop-color="rgb(160, 240, 240)" />
                            <stop offset="100%" stop-color="rgb(216, 240, 204)" />
                        </linearGradient>
                        <polyline class="polyline" />
                    </svg>
                    <div class="graph-grid">

                        <div class="horizontal" style="top: 0%">
                            <div class="horizontal-value">100</div>
                        </div>
                        <div class="horizontal" style="top: 25%">
                            <div class="horizontal-value">75</div>
                        </div>
                        <div class="horizontal" style="top: 50%">
                            <div class="horizontal-value">50</div>
                        </div>
                        <div class="horizontal" style="top: 75%">
