@model Video
@{
    Video video = Model as Video;
}
<div class="card">
    @if (video.YouTubeId != null)
    {
        <div class="video-wrapper">
            <div style="padding-bottom: 56.28%">
                <iframe width="100%" height="100%" src="https://www.youtube.com/embed/@(video.YouTubeId)?rel=0&amp;showinfo=0"
                        frameborder="0" allow="encrypted-media" allowfullscreen></iframe>
            </div>
        </div>

        <div class="card-content @if (!string.IsNullOrWhiteSpace(video.Comment)) {<text>with-extension </text>}">
            @video.Description
        </div>
    }
    else
    { 
        <div class="card-content-wrapper @if (!string.IsNullOrWhiteSpace(video.Comment)) {<text>with-extension </text>}">
            <div class="card-content">
                @video.Description
            </div>
            <a class="card-link" href="@video.Url" target="blank">
                <div class="arrow-box-wrapper">
                    <div class="arrow-box">
                        <img src="~/img/clip-art/video.png" alt="movie" class="inner-card-item">
                    </div>
                </div>
            </a>

        </div>
    }

    @if (!string.IsNullOrWhiteSpace(video.Comment))
    {
    <div class="card-extension">
        @video.Comment
    </div>
    }
</div>


